<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        style="@style/ToolBarStyle"
        android:id="@+id/learn_toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">
        <TextView
            style="@style/ToolBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25sp"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title" />
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/imageView1"
        android:onClick="onClick"
        android:layout_marginTop="6dp"
        android:background="@drawable/round_corner"
        app:layout_constraintBottom_toTopOf="@+id/guideline11"
        app:layout_constraintTop_toBottomOf="@+id/learn_toolbar"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintLeft_toLeftOf="@+id/guideline1" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:onClick="onClick"
        android:text="@string/bells"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@+id/imageView1"
        app:layout_constraintLeft_toLeftOf="@+id/guideline1" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:scaleType="center"
        android:onClick="onClick"
        android:id="@+id/bell_btn"
        android:src="@drawable/bells"
        app:layout_constraintBottom_toBottomOf="@+id/imageView1"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        app:layout_constraintLeft_toLeftOf="@+id/guideline1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        android:onClick="onClick"
        android:background="@drawable/round_corner"
        app:layout_constraintBottom_toTopOf="@+id/guideline11"
        app:layout_constraintRight_toLeftOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/learn_toolbar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3" />

    <TextView
        android:id="@+id/text2"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:text="@string/Buddha"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3" />

    <ImageView
        android:id="@+id/Buddha_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="onClick"
        android:padding="8dp"
        android:scaleType="center"
        android:src="@drawable/buddha"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintRight_toLeftOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/text2"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/imageView3"
        android:onClick="onClick"
        android:layout_marginTop="6dp"
        android:background="@drawable/round_corner"
        app:layout_constraintBottom_toTopOf="@+id/guideline12"
        app:layout_constraintTop_toBottomOf="@+id/imageView1"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintLeft_toLeftOf="@+id/guideline1" />

    <TextView
        android:id="@+id/text3"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:text="@string/Flags"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintLeft_toLeftOf="@+id/guideline1" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:onClick="onClick"
        android:id="@+id/Flags_btn"
        android:scaleType="center"
        android:src="@drawable/flags"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/text3"
        app:layout_constraintLeft_toLeftOf="@+id/guideline1" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="onClick"
        android:layout_marginTop="6dp"
        android:background="@drawable/round_corner"
        app:layout_constraintBottom_toTopOf="@+id/guideline12"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintRight_toLeftOf="@+id/guideline4"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text4"
        android:onClick="onClick"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:text="@string/market_place1"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3" />

        <ImageView
            android:id="@+id/Market_place_1_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onClick"
            android:padding="8dp"
            android:scaleType="center"
            android:src="@drawable/market1"
            app:layout_constraintBottom_toBottomOf="@+id/guideline12"
            app:layout_constraintLeft_toLeftOf="@+id/guideline3"
            app:layout_constraintRight_toLeftOf="@+id/guideline4"
            app:layout_constraintTop_toBottomOf="@+id/text4" />


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/imageView5"
        android:onClick="onClick"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/round_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintLeft_toLeftOf="@+id/guideline1"
        app:layout_constraintTop_toTopOf="@+id/guideline12" />
    <TextView
        android:id="@+id/text5"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:text="@string/market_place2"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:layout_constraintLeft_toLeftOf="@+id/guideline1" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:scaleType="center"
        android:onClick="onClick"
        android:id="@+id/Market_place_2_btn"
        android:src="@drawable/market2"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/text5"
        app:layout_constraintLeft_toLeftOf="@+id/guideline1" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/imageView6"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:onClick="onClick"
        android:background="@drawable/round_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline4"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/guideline12" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text6"
        android:onClick="onClick"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:text="@string/rocky"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="center"
        android:onClick="onClick"
        android:id="@+id/Rocky_Beach_btn"
        android:src="@drawable/rocky"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintRight_toLeftOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/text6"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline1"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.02"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.49"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="188dp" />
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.51"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="196dp" />
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.98"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="377dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline11"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.386"
        tools:layout_editor_absoluteY="219dp"
        tools:layout_editor_absoluteX="0dp" />
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline12"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.692"
        tools:layout_editor_absoluteY="393dp"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>
    </ScrollView>